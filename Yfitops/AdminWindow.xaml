<Window x:Class="Yfitops.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Panel" Height="550" Width="1000"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel>
            <TextBlock Text="Users" FontSize="18" Margin="0 0 0 0"/>
            <ListBox x:Name="UserList" Height="350">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Username}" Width="120"/>
                            <TextBlock Text=" - " />
                            <TextBlock Text="{Binding Role}" FontWeight="Bold"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>


            <Button Content="Delete User" Height="30" Margin="0 0 0 0"
                    Click="DeleteUser_Click"/>

            <Button Content="Change Role" Height="30"
                    Click="ChangeRole_Click"/>
            
            <Button Content="Logout" Height="30" Margin="0 0 0 0" 
                    Click="Logout_Click"/>
            
        </StackPanel>

        <StackPanel Grid.Column="1" Margin="20 0 0 0">
            <TextBlock Text="Musicians" FontSize="18" Margin="0 0 0 10"/>
            <ListBox x:Name="MusicianList" Height="350"
                     DisplayMemberPath="StageName"
                     SelectionChanged="MusicianList_SelectionChanged"/>
        </StackPanel>

        <StackPanel Grid.Column="2" Margin="20 0 0 0">
            <TextBlock Text="Albums" FontSize="18" Margin="0 0 0 10"/>
            <ListBox x:Name="AlbumList" Height="350"
                     DisplayMemberPath="Title"
                     SelectionChanged="AlbumList_SelectionChanged"/>

            <Button Content="Delete Album" Height="30" Margin="0 10 0 0"
                    Click="DeleteAlbum_Click"/>
        </StackPanel>

        <StackPanel Grid.Column="3" Margin="20 0 0 0">
            <TextBlock Text="Songs" FontSize="18" Margin="0 0 0 10"/>
            <ListBox x:Name="SongList" Height="150">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Title}" FontSize="14"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>


            <Button Content="Delete Song" Height="30" Margin="0 10 0 0"
                    Click="DeleteSong_Click"/>
        </StackPanel>

    </Grid>
</Window>
