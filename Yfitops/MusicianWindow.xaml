<Window x:Class="Yfitops.MusicianWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Musician Panel" Height="500" Width="750"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel>
            <Button Content="Create Album" Height="40" Margin="0 10" Click="CreateAlbum_Click"/>
            <Button Content="Add Song" Height="40" Margin="0 10" Click="AddSong_Click"/>
            <Button Content="Delete Album" Click="DeleteAlbum_Click"/>
            <Button Content="Delete Song" Click="DeleteSong_Click"/>

            <Button Content="Logout" Height="40" Margin="0 40 0 10" Click="Logout_Click"/>
        </StackPanel>

        <StackPanel Grid.Column="1" Margin="20 0 0 0">
            <TextBlock Text="Your Albums" FontSize="18"/>
            <ListBox x:Name="AlbumList" Height="350"
                     DisplayMemberPath="Title"
                     SelectionChanged="AlbumList_SelectionChanged"/>
        </StackPanel>

        <StackPanel Grid.Column="2" Margin="20 0 0 0">
            <TextBlock Text="Songs" FontSize="18"/>
            <ListBox x:Name="SongList" Height="350"
                     DisplayMemberPath="Title"/>
        </StackPanel>

    </Grid>
</Window>
