<Window x:Class="Yfitops.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register" Height="400" Width="400"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Create Account"
                   FontSize="26"
                   HorizontalAlignment="Center"
                   Margin="0 0 0 20"/>

        <StackPanel Grid.Row="1" Margin="0 10">

            <TextBlock Text="Username:"/>
            <TextBox x:Name="UsernameBox" Height="30" Margin="0 5"/>

            <TextBlock Text="Password:"/>
            <PasswordBox x:Name="PasswordBox" Height="30" Margin="0 5"/>

            <TextBlock Text="Role:"/>
            <ComboBox x:Name="RoleBox" Height="30" Margin="0 5">
                <ComboBoxItem Content="Musician" Tag="Musician"/>
                <ComboBoxItem Content="User" Tag="User"/>
            </ComboBox>

        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 20">

            <Button Content="Register" Width="120" Margin="10" Click="Register_Click"/>
            <Button Content="Cancel" Width="120" Margin="10" Click="Cancel_Click"/>

        </StackPanel>

    </Grid>
</Window>
